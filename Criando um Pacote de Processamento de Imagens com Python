# preprocessamento.py
import cv2
import numpy as np

def carregar_imagem(caminho):
    """Carrega uma imagem a partir de um caminho."""
    img = cv2.imread(caminho)
    return img

def redimensionar(img, nova_largura, nova_altura):
    """Redimensiona uma imagem para um novo tamanho."""
    return cv2.resize(img, (nova_largura, nova_altura))

def converter_para_tons_de_cinza(img):
    """Converte uma imagem para tons de cinza."""
    return cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

# utils.py
def salvar_imagem(img, caminho):
    """Salva uma imagem em um determinado caminho."""
    cv2.imwrite(caminho, img)

